{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "pixi.js": ["node_modules/pixi.js/index.d.ts"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "webpack.*", "assets.d.ts"],
  "exclude": ["node_modules"]
}
